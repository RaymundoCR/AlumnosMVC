@using AlumnosMVC.Models
@model Alumnos
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal">
    <h2>Datos del Alumno</h2>
    <asp:Label ID="lblMensajes" runat="server" Text="" CssClass="text-danger"></asp:Label>

    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>Nombre</dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt>Primer Apellido</dt>
        <dd>
            @Html.DisplayFor(model => model.primerApellido)
        </dd>
        <dt>Segundo Apellido</dt>
        <dd>
            @Html.DisplayFor(model => model.segundoApellido)
        </dd>
        <dt>Fecha Nacimiento</dt>
        <dd>
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>
        <dt>CURP</dt>
        <dd>
            @Html.DisplayFor(model => model.curp)
        </dd>
        <dt>Correo</dt>
        <dd>
            @Html.DisplayFor(model => model.correo)
        </dd>
        <dt>Telefono</dt>
        <dd>
            @Html.DisplayFor(model => model.telefono)
        </dd>
        <dt>Sueldo Mensual</dt>
        <dd>
            @Html.DisplayFor(model => model.sueldo)
        <dt>Estado</dt>
        <dd>
            @Html.DisplayFor(model => model.idEstadoOrigen)
        </dd>
        <dt>Estatus</dt>
        <dd>
            @Html.DisplayFor(model => model.idEstatus)
        </dd>
    </dl>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-info btn-sm"> @Html.ActionLink("CalcularIMSS", "CalcularIMSS", new { model = Model.id })</button>
        </div>

        <div class="col-md-2">
            <button class="btn btn-info btn-sm"> @Html.ActionLink("CalcularISR", "CalcularISR", new { model = Model.id })</button>
        </div>
    </div>

    <div class="form-group">
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
